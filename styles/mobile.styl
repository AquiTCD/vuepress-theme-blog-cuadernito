@import './config'

$mobileSidebarWidth = $sidebarWidth * 0.82
// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size: 15px
    width: $mobileSidebarWidth
  .page,
  .hero.has-sidebar
    padding-left: $mobileSidebarWidth
  .footer.has-sidebar
    padding-left: $mobileSidebarWidth + 8px
// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    padding-top: $navbarHeight
    top: 0
    transform: translateX(-100%)
    transition: transform 0.2s ease
  .page,
  .hero.has-sidebar,
  .footer.has-sidebar
    padding-left: 0
  .theme-container
    &.sidebar-open
      .sidebar
        transform: translateX(0)
    &.no-navbar
      .sidebar
        padding-top: 0
// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size: 1.9rem
  {$contentClass}
    div[class*='language-']
      border-radius: 0
      margin: 0.85rem -1.5rem
